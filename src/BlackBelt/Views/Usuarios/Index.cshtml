@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Usuários";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Usuarios.css" />
}

<div class="container">
    @if (User.IsInRole("Admin"))
    {
        <a class="nav-link text-dark btn btn-primary" asp-area="" asp-controller="Usuarios" asp-action="Cadastro">Cadastrar Usuário</a>
    }
    <div>
        <table class="tabelaInfo">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Data de Nascimento</th>
                    <th scope="col">Tipo de Usuário</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <h6>Carregando Usuários...</h6>
                }
                @if (Model != null && Model.Any())
                {
                    foreach (Usuario usuario in Model)
                    {
                        <tr>
                            <td>@usuario.Nome.ToString()</td>
                            <td>@usuario.Cpf.ToString()</td>
                            <td>@usuario.Telefone.ToString()</td>
                            <td>@usuario.Dt_Nascimento.ToString()</td>
                            <td>@usuario.Tipo_Usuario.ToString()</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-warning" asp-route-id="@usuario.Id" asp-controller="Usuarios" asp-action="Editar">Editar</a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@usuario.Id" asp-controller="Usuarios" asp-action="Excluir">Excluir</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@{
}
