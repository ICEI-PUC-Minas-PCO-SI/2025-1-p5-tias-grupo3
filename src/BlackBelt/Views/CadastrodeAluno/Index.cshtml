@{
    ViewData["Title"] = "Cadastro de Aluno";
    Layout = "_Layout";
}

<style>
    body {
        background-color: white;
        font-family: Arial, sans-serif;
    }

    .header {
        background-color: #b90000;
        color: white;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .brand {
        font-style: italic;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .title {
        flex: 1;
        text-align: center;
        font-size: 2rem;
    }

    .form-control {
        background-color: #e5e5e5;
        border: none;
        border-radius: 20px;
    }

    label {
        font-weight: bold;
        margin-top: 10px;
    }

    .btn-cadastrar {
        background-color: #c1121f;
        color: white;
        border-radius: 20px;
        padding-left: 2rem;
        padding-right: 2rem;
    }

    .btn-voltar {
        background-color: black;
        color: white;
        border-radius: 20px;
        padding-left: 2rem;
        padding-right: 2rem;
    }

    .form-wrapper {
        max-width: 500px;
        margin: auto;
        margin-top: 2rem;
    }

    .footer-btn {
        margin: 2rem;
    }

    .navbar a {
        color: #fff;
        margin-left: 1rem;
        text-decoration: none;
    }

    .top-bar a {
        color: #fff;
        margin-left: 1rem;
        text-decoration: none;
    }
</style>

<body>


    <div class="container form-wrapper mt-2">
        <h1 class="text-center m-3">Cadastro de Aluno</h1>
        <form>
            <label for="nome">Nome</label>
            <input type="text" id="nome" class="form-control bg-white border border-dark rounded-pill">

            <label for="cpf">CPF</label>
            <input type="text" id="cpf" class="form-control bg-white border border-dark rounded-pill">

            <label for="email">Email</label>
            <input type="email" id="email" class="form-control bg-white border border-dark rounded-pill">

            <label for="telefone">Telefone</label>
            <input type="text" id="telefone" class="form-control bg-white border border-dark rounded-pill">

            <label for="data">Data de nascimento</label>
            <input type="date" id="data" class="form-control bg-white border border-dark rounded-pill">

            <label for="turma">Turma</label>
            <input type="text" id="turma" class="form-control bg-white border border-dark rounded-pill">

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-cadastrar w-100">Cadastrar</button>
            </div>
        </form>
    </div>

    <div class="footer-btn ms-4">
        <a class="navbar-brand" asp-area="" asp-controller="ListadeAlunos" asp-action="Index"><button class="btn btn-voltar px-4">Voltar</button></a>
    </div>

            </body>