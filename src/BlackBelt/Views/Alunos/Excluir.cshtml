@model BlackBelt.Models.Aluno
@using System.Text.Json
<div class="container">
    <h4>Tem certeza que deseja excluir @Model.Nome da lista de alunos?</h4>
    <form asp-action="ExcluirAluno" asp-controller="Alunos" method="post">
        <input type="hidden" value="@Model.Id" asp-for="Id" />
        <button class="btn btn-primary" type="submit">Excluir</button>
    </form>

    <a class="mb-3 btn btn-dark" asp-action="Index" asp-controller="Alunos">voltar</a>
</div>


@if (TempData["ErroExcluirAluno"] != null)
{
    <script>
        alert(@Html.Raw(JsonSerializer.Serialize(TempData["ErroExcluirAluno"])));
    </script>
}
