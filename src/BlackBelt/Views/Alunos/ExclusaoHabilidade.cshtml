@model BlackBelt.Models.Habilidade
<div class="container">
    <h4>Tem certeza que deseja excluir @Model.Nome da lista de habilidades?</h4>
    <form asp-action="ExcluirHabilidade" asp-controller="Alunos" method="post">
        <input type="hidden" value="@Model.Id" asp-for="Id" />
        <input type="hidden" value="@Model.Id_Aluno" asp-for="Id_Aluno" />
        <button class="btn btn-primary" type="submit">Excluir</button>
    </form>

    <a class="mb-3 btn btn-dark" asp-route-id="@Model.Id_Aluno" asp-action="Perfil" asp-controller="Alunos">voltar</a>
</div>
@{
}
