@model IEnumerable<Aluno>
@{
    ViewData["Title"] = "Alunos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Alunos.css" />
}

<div class="container">
    <a class="nav-link text-light btn btn-primary" asp-area="" asp-controller="Alunos" asp-action="Cadastro">Cadastrar Aluno</a>
    <div>
        <table class="tabelaInfo">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Turma</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Faixa</th>
                    <th scope="col">Data de Nascimento</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <h6>Carregando Alunos...</h6>
                }
                @if (Model != null && Model.Any())
                {
                    foreach (Aluno aluno in Model)
                    {
                        <tr>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-warning" asp-route-id="@aluno.Id" asp-controller="Alunos" asp-action="Editar">Editar</a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a role="button" class="btn btn-danger" asp-route-id="@aluno.Id" asp-controller="Alunos" asp-action="Excluir">Excluir</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@{
}
