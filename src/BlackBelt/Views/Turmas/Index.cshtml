@model IEnumerable<Turma>
@{
    ViewData["Title"] = "Turma";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Turmas.css" />
}

<div class="container">
    <a class="nav-link text-light btn btn-primary" asp-area="" asp-controller="Turmas" asp-action="Cadastro">Cadastrar Turma</a>
    <div>
        <table class="tabelaInfo">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Instrutor</th>
                    <th scope="col">Horário</th>
                    <th scope="col">Status</th>
                    <th scope="col">Data de cadastro</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <h6>Carregando turmas...</h6>
                }
                @if (Model != null && Model.Any())
                {
                    foreach (Turma turma in Model)
                    {
                        <tr>
                            <th scope="col">@turma.Nome.ToString()</th>
                            <th scope="col">@turma.Instrutor.Nome.ToString()</th>
                            <th scope="col">@turma.Horario.ToString()</th>
                            @switch (@turma.Status)
                            {
                                case 1:
                                    <th scope="col">Ativa</th>
                                    break;
                                case 2:
                                    <th scope="col">Desativada</th>
                                    break;
                            }
                            <th scope="col">@turma.Dt_Cadastro.ToString("dd/MM/yyyy")</th>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-warning" asp-route-id="@turma.Id" asp-controller="Turmas" asp-action="Editar">Editar</a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a role="button" class="btn btn-danger" asp-route-id="@turma.Id" asp-controller="Turmas" asp-action="Excluir">Excluir</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@{
}
