@using System.Text.Json
@model BlackBelt.Models.Turma
<div class="container">
    <h4>Tem certeza que deseja excluir @Model.Nome da lista de turmas?</h4>
    <form asp-action="ExcluirTurma" asp-controller="Turmas" method="post">
        <input type="hidden" value="@Model.Id" asp-for="Id" />
        <button class="btn btn-primary" type="submit">Excluir</button>
    </form>

    <a class="mb-3 btn btn-dark" asp-action="Index" asp-controller="Turmas">voltar</a>
</div>

@if (TempData["ErroExcluirTurma"] != null)
{
    <script>
        alert(@Html.Raw(JsonSerializer.Serialize(TempData["ErroCadastroTurma"])));
    </script>
}
