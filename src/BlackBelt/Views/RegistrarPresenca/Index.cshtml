@{
    ViewData["Title"] = "Frequência de alunos";
    Layout = "_Layout";
}

<style>
   

    .sigla-title {
        color: white;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .btn-voltar {
        background-color: black;
        color: white;
        border-radius: 20px;
    }

    .filter-btn {
        background-color: #3b2b1a;
        color: white;
    }


    /* Botão Data e Salvar Frequência */
    .btn-red-custom {
        background-color: #c1121f !important;
        color: white !important;
        border-radius: 20px !important;
        padding-left: 2rem !important;
        padding-right: 2rem  !important;
    }
</style>

<body>

    <div class="container">
       
        <h1 class="text-center m-3">Frequência de alunos</h1>
        <div class="container mt-4">
            <!-- Cabeçalho com Data -->
            <div class="frequency-header mb-4">
                <div class="d-flex flex-wrap align-items-end gap-3">
                    <!-- Container flexível -->
                    <!-- Seletor de Data -->
                    <div class="date-selector flex-grow-1" style="min-width: 250px;">
                        <label for="datePicker" class="form-label mb-1">Data da Aula:</label>
                        <div class="d-flex gap-2">
                            <input type="date" id="datePicker" class="form-control" value="2025-05-15">
                           
                        </div>
                    </div>

                    <!-- Filtro por Turma -->
                    <div class="turma-filter flex-grow-1" style="min-width: 250px;">
                        <label for="turmaSelect" class="form-label mb-1">Filtrar por Turma:</label>
                        <div class="d-flex gap-2">
                            <select id="turmaSelect" class="form-select">
                                <option value="all">Todas as Turmas</option>
                                <option value="1">Turma 1</option>
                                <option value="2">Turma 2</option>
                                <option value="3">Turma 3</option>
                            </select>
                            <button class="btn btn-filter flex-shrink-0">
                                <button class="btn filter-btn w-100 rounded-pill">Filtrar</button>
                               
                            </button>
                           
                        </div>
                    </div>
                </div>
            </div>
            <!-- Lista de Alunos -->
            <ul class="list-group" id="studentsList">
                <!-- Exemplo de UM item - o JavaScript vai gerar os demais -->
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="student-info">
                        <span class="student-name fw-bold">Lucas</span>
                        <small class="text-muted d-block">Turma 1</small>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="text-danger me-2 absence-label">Ausente</span>
                        <div class="form-check form-switch d-flex align-items-center">
                            <input class="form-check-input presence-check" type="checkbox" id="presence-1" checked>
                            <label class="form-check-label ms-1 text-success" for="presence-1">Presente</label>
                        </div>
                    </div>
                </li>

            </ul>

            <!-- Botão para salvar -->
            <div class="mt-3 text-end">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><button class="btn btn-voltar px-4">Voltar</button></a>
                <button id="saveBtn" class="btn btn-red-custom py-2 px-4">
                    <i class="bi bi-save"></i> Salvar</button>
            </div>
           

            <hr>
</body>