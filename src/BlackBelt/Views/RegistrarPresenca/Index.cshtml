@model IEnumerable<Turma>
@{
    ViewData["Title"] = "Registrar Presença";
}

@section Styles {
    <link rel="stylesheet" href="~/css/RegistrarPresenca.css" />
}

<div class="container">
    <div>
        <table>
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Horário</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <h6>Carregando turmas...</h6>
                }
                @if (Model != null && Model.Any())
                {
                    foreach (Turma turma in Model)
                    {
                        <tr>
                            <th scope="col">@turma.Nome.ToString()</th>
                            <th scope="col">@turma.Horario.ToString()</th>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-warning" asp-route-id="@turma.Id" asp-controller="RegistrarPresenca" asp-action="LancarAula">Lançar Aula</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@{
}
